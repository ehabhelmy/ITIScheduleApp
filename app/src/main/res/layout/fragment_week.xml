<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jets.mad.itischeduleapp.UI.Fragment.WeekFragment"
    android:background="#ffffff">

    <!-- TODO: Update blank fragment layout -->

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        android:layout_marginTop="10dp"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/caldroid_middle_gray"
        app:headerRowPadding="12dp"
        app:columnGap="1dp"
        app:noOfVisibleDays="5"
        app:headerRowBackgroundColor = "@color/caldroid_white"
        app:dayBackgroundColor="#f9f9f9"
        app:todayHeaderTextColor = "#FA8072"
        app:todayBackgroundColor="#FFFAFA"/>

</RelativeLayout>
