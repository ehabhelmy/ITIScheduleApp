<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:id="@+id/day_card_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/day_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="12 A.m."
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/imageView_start"
                android:layout_toEndOf="@+id/imageView_start" />

            <View
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_below="@+id/imageView_start"
                android:layout_marginLeft="18dp"
                android:background="@color/caldroid_darker_gray"
                android:id="@+id/view"
                android:layout_above="@+id/imageView_end" />

            <TextView
                android:id="@+id/day_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 A.m."
                android:layout_alignTop="@+id/imageView_end"
                android:layout_alignStart="@+id/day_start_time" />

            <TextView
                android:id="@+id/day_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Study Android"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/day_event_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:text="id"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@mipmap/ic_access_time_black_24dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imageView_end"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                card_view:srcCompat="@mipmap/ic_access_time_black_24dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>