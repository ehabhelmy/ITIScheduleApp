<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="2dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            card_view:srcCompat="@mipmap/ic_date_range_black_24dp" />

        <TextView
            android:id="@+id/myEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Project" />

        <ImageButton
            android:id="@+id/addSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myEventName"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/myEventName"
            android:layout_marginEnd="12dp"
            android:background="@color/caldroid_white"
            card_view:srcCompat="@mipmap/ic_check_box_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>