<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jets.mad.itischeduleapp.UI.Fragment.DayDetailFragment"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/day_details_type"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/caldroid_light_red" />

            <TextView
                android:id="@+id/day_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_details_type"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Study Android"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/day_details_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_details_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:text="9:00 A.M"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/day_details_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/day_details_start_time"
                android:layout_marginStart="12dp"
                android:text="9:00 A.M"
                android:layout_alignEnd="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day_details_end_time"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="32dp"
                android:text="I am going to study intent and services"
                android:id="@+id/textView15" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
